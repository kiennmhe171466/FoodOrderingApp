<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    tools:context=".Activities.Home.ProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:elevation="40dp" />

    <TextView
        android:id="@+id/my_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:text="My profile"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_profile"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:text="Personal details"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="sans-serif-light" />

    <ImageView
        android:id="@+id/change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/my_profile"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/baseline_mode_edit_24" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/change"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/user_avatar_container"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/user_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile_image" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/user_avatar_container"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text="Ngo Minh Kien"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light" />

            <TextView
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_name"
                android:layout_toEndOf="@id/user_avatar_container"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text="kiennmhe1714666@fpt.edu.vn"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/user_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_email"
                android:layout_toEndOf="@id/user_avatar_container"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text="0984381766"
                android:textColor="#717171"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/user_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_phone_number"
                android:layout_toEndOf="@id/user_avatar_container"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text="01/01/1990"
                android:textColor="#717171"
                android:textSize="15sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtShortCut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view_profile"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:text="Shortcut"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="sans-serif-light" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_orders"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/txtShortCut"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="20dp"
        android:elevation="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/historyicon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="9"
                android:fontFamily="sans-serif"
                android:text="My Orders"
                android:textSize="20sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
