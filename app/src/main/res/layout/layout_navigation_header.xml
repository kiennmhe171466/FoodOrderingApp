<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/headerOfNavigationLeft"
    android:paddingVertical="16dp"
    android:background="@color/orange">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgAvatarInNavigationBar"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:padding="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user"
        app:layout_constraintBottom_toTopOf="@+id/txtNameInNavigationBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/Circle_Image"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/txtNameInNavigationBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:fontFamily="@font/sfpro_semibold"
        android:gravity="center"
        android:text="Hi, User"
        android:textColor="#000000"
        android:textSize="28sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgAvatarInNavigationBar" />

    <TextView
        android:id="@+id/txtHelloInNavigationBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/sfpro_regularitalic"
        android:shadowColor="#AF6B6B"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1.5"
        android:text="Have a good day!"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/txtNameInNavigationBar"
        app:layout_constraintStart_toStartOf="@id/txtNameInNavigationBar"
        app:layout_constraintTop_toBottomOf="@id/txtNameInNavigationBar" />

</androidx.constraintlayout.widget.ConstraintLayout>
